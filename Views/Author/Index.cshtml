@model IEnumerable<Author>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
        <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <div class="col mb-3">
        <a asp-controller="Author" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add Author</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Author Name</th>
                <th scope="col">BirthYear</th>
   
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                    <tr>
                        <td width="20%">
                        @item.Name
                        </td>
                        <td width="20%">
                        @item.BirthYear
                        </td>
                 
                        <td>
                            <div role="group" class="w-60 btn-group">
                                <a asp-controller="Author" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                                <a asp-controller="Author" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>