@model Book

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Book</h2>
    </div>

    <form method="post" asp-action="Delete">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Enter the Title">
                <span asp-validation-for="Title" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Price">Price</label>
                <input type="number" class="form-control mb-3" asp-for="Price" placeholder="Enter the Price">
                <span asp-validation-for="Title" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="PublishedYear">PublishedYear</label>
                <input type="datetime-local" class="form-control" asp-for="PublishedYear">
                <span asp-validation-for="PublishedYear" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="DateCreated">DateCreated</label>
                <input type="datetime-local" class="form-control" asp-for="DateCreated">
                <span asp-validation-for="DateCreated" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="DateUpdated">DateUpdated</label>
                <input type="datetime-local" class="form-control" asp-for="DateUpdated">
                <span asp-validation-for="DateUpdated" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }